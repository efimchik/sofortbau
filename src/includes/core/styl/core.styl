html
    font-size 62.5%

html,
body
    height 100%

body
    min-width 320px
    font-family 'Sora', sans-serif
    line-height 30px
    font-size 24px
    font-weight 400
    color #1D2228



&::-webkit-input-placeholder
    color #fff

&::-moz-placeholder
    color #fff

&:-moz-placeholder
    color #fff

&:-ms-input-placeholder
    color #fff

&:focus::-webkit-input-placeholder
    color transparent

&:focus::-moz-placeholder
    color transparent

&:focus:-moz-placeholder
    color transparent

&:focus:-ms-input-placeholder
    color transparent


h2
    line-height 127px
    font-size 86px
    color #3A3E46
    font-weight 700

    @media(max-width 1400px)
        line-height 9.071vw
        font-size 6.143vw

    @media(max-width 570px)
        line-height 16vw
        font-size 10vw

h3
    max-width 1128px
    width 100%
    line-height 57px
    font-size 45px
    color #1D2228
    text-align center
    box-sizing border-box

    @media(max-width 1400px)
        line-height 4.071vw
        font-size 3.214vw

    @media(max-width 1024px)
        line-height 4.883vw
        font-size 3.711vw

    @media(max-width 768px)
        line-height 6.250vw
        font-size 4.167vw

    @media(max-width 650px)
        line-height 36px
        font-size 26px

    @media(max-width 450px)
        line-height 30px
        font-size 20px

    span
        color #FED053

        &:last-child
            color #F4A202

img
    width 100%
    display block

.box-center
    margin 0 auto
    padding 0 60px
    max-width 1248px
    width 100%
    box-sizing border-box

    @media(max-width 1400px)
        padding 0 4.286vw

.btn
    padding 0
    width 168px
    height 50px
    display block
    flex-shrink 0
    font-family 'Open Sans', sans-serif
    line-height 49px
    font-size 16px
    font-weight 600
    color #fff
    border 2px solid #fff
    box-sizing border-box
    opacity 0
    background none
    box-shadow 4px 4px 1px 2px rgba(#000, .1)
    cursor pointer

    @media(max-width 450px)
        width 106px
        height 40px
        line-height 38px
        font-size 14px


    &:hover
        box-shadow none

.form__field
    width 100%
    font-family 'Open Sans', sans-serif
    line-height 25px
    font-size 18px
    color #fff
    letter-spacing 0.1em
    opacity 0
    border 0
    background none
    transition opacity 300ms 1500ms ease

    @media(max-width 450px)
        font-size 14px