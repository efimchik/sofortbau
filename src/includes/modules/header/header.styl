.header
    height 100vh
    position relative

    img
        height 100vh
        object-fit cover
        object-position center

    .logo
        padding 10% 17% 10% 22%
        width 100%
        background-color #fff
        box-sizing border-box
        transform translateX(-100%)
        transition transform 800ms 300ms ease-in-out

        @media(max-width 1400px)
            padding 7.1vw 8.9vw 7.1vw 11.4vw

        @media(max-width 1024px)
            padding 5.1vw 8.9vw 5.1vw 11.4vw

        @media(max-width 570px)
            padding 6.1vw 8.9vw 6.1vw 11.4vw

        img
            height auto

    &__content
        width 52.285714%
        position absolute
        top 140px
        left 0
        overflow hidden

        @media(max-width 1400px)
            width 52.3vw
            top 14vw

        @media(max-width 1024px)
            width 56.3vw

        @media(max-width 820px) and (orientation: landscape)
            top 50%
            transform translateY(-50%)

        @media(max-width 767px)
            width 62.3vw

        @media(max-width 767px) and (orientation: landscape)
            top 50%
            transform translateY(-50%)

        @media(max-width 570px)
            width 86.3vw
            top 38vw

        @media(max-width 570px) and (orientation: landscape)
            top 50%
            transform translateY(-50%)

    &__text
        padding 4.5% 10% 4.5% 22%
        width 86.885245%
        line-height 40px
        font-size 31px
        font-weight 700
        color #fff
        background-color #F4A202
        box-sizing border-box
        transform translateX(-100%)
        transition transform 800ms 600ms ease-in-out

        @media(max-width 1400px)
            padding 2.3vw 5.1vw 2.3vw 11.4vw
            width 45.4vw
            line-height 2.9vw
            font-size 2.1vw

        @media(max-width 1024px)
            width 50.4vw
            line-height 3.7vw
            font-size 2.6vw

        @media(max-width 767px)
            width 55.4vw
            line-height 4.5vw
            font-size 3vw

        @media(max-width 570px)
            width 80.4vw
            line-height 6.5vw
            font-size 5vw


        span
            display block
            font-weight 400