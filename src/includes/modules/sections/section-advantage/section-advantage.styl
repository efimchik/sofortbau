.section
    &--advantage
        padding 120px 0

        @media(max-width 1400px)
            padding 8.571vw 0

        .box-center
            max-width 1152px

        h2
            margin-bottom 105px
            line-height 108px
            color#F4B301

            @media(max-width 1400px)
                margin-bottom 7.5vw
                line-height 7.714vw

            @media(max-width 1023px)
                margin-bottom 7.5vw
                line-height 8vw

            @media(max-width 570px)
                line-height 12vw

            span
                display block
                color #3A3E46

        .advantage__list
            width 100%
            display flex
            justify-content space-between

            @media(max-width 767px)
                flex-direction column

            &-item
                width calc((100% - 99px)/3)
                position relative

                @media(max-width 1023px)
                    width calc((100% - 66px)/3)

                @media(max-width 767px)
                    margin-bottom 6vw
                    width 100%

                    &:last-child
                        margin-bottom 0

                &:before
                &:after
                    content ''
                    position absolute
                    transition opacity 500ms ease

                &:before
                    width 62%
                    height 4px
                    top 18px
                    left -62%
                    opacity 0
                    background url(./../img/icn-line.svg) no-repeat center
                    transition-delay 2300ms

                    @media(max-width 1400px)
                        width 13vw
                        left -13vw

                    @media(max-width 767px)
                        display none

                &:after
                    width 12px
                    height 12px
                    top 14px
                    left -6px
                    opacity 0
                    background-color #3A3E46
                    transition-delay 1800ms

                    @media(max-width 767px)
                        display none


                &:first-child
                    &:before
                    &:after
                        display none

            &-icn
                margin-bottom 20px
                width 96px
                height 96px
                opacity 0
                position relative
                background-color #FED053
                transition opacity 500ms 600ms ease

                @media(max-width 1400px)
                    margin-bottom 1.429vw
                    width 6.857vw
                    height 6.857vw

                @media(max-width 1023px)
                    margin-bottom 2.3vw
                    width 9vw
                    height 9vw

                @media(max-width 767px)
                    margin-bottom 3vw
                    width 11vw
                    height 11vw

                @media(max-width 570px)
                    width 13vw
                    height 13vw

                img
                    width 122px
                    position absolute
                    top -20px
                    left 30px
                    opacity 0
                    transition opacity 500ms 1400ms ease

                    @media(max-width 1400px)
                        width 8.714vw
                        top -1.429vw
                        left 2.143vw

                    @media(max-width 1023px)
                        width 11vw

                    @media(max-width 767px)
                        width 14vw
                        top -2.3vw
                        left 2.7vw

                    @media(max-width 570px)
                        width 17vw

            &-title
                margin-bottom 20px
                line-height 30px
                font-size 24px
                font-weight 700
                color #1D2228

                @media(max-width 1400px)
                    margin-bottom 1.429vw
                    line-height 2.143vw
                    font-size 1.714vw

                @media(max-width 1023px)
                    margin-bottom 2vw
                    line-height 2.8vw
                    font-size 2.3vw

                @media(max-width 767px)
                    line-height 4.2vw
                    font-size 3.5vw

                @media(max-width 570px)
                    line-height 5.8vw
                    font-size 5vw

            &-desc
                font-family 'OpenSans', sans-serif
                line-height 28px
                font-size 20px
                color #1D2228
                font-weight 300

                @media(max-width 1400px)
                    line-height 2vw
                    font-size 1.429vw

                @media(max-width 1023px)
                    line-height 2.8vw
                    font-size 2.1vw

                @media(max-width 767px)
                    line-height 3vw
                    font-size 2.7vw

                @media(max-width 570px)
                    line-height 4.8vw
                    font-size 4vw