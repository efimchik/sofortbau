.section
    &--price
        width 100%
        position relative
        overflow hidden

        @media(max-width 767px)
            height 320px

            img
                height 100%
                object-fit cover
                object-position center

        .price
            padding 4.4% 9.2%
            position absolute
            top 0
            right 0
            color #000
            text-align center
            background-color #fff
            transform translateY(-100%)
            transition transform 500ms ease

            @media(max-width 1400px)
                padding 4.45vw 9.2vw

            @media(max-width 1023px)
                padding 4.45vw 4.8vw

            @media(max-width 767px)
                padding 20px 25px

            &__title
                line-height 32px
                font-size 30px

                @media(max-width 1400px)
                    line-height 2.286vw
                    font-size 2.143vw

                @media(max-width 1023px)
                    line-height 2.6vw
                    font-size 2.5vw

                @media(max-width 767px)
                    line-height 26px
                    font-size 20px

                span
                    margin 20px 0
                    display block
                    line-height 126px
                    font-size 120px

                    @media(max-width 1400px)
                        margin 1.429vw 0
                        line-height 9vw
                        font-size 8.571vw

                    @media(max-width 767px)
                        margin 10px 0
                        line-height 64px
                        font-size 60px

            &__desc
                line-height 19px
                font-size 18px

                @media(max-width 1400px)
                    line-height 1.357vw
                    font-size 1.286vw

                @media(max-width 1023px)
                    line-height 2.1vw
                    font-size 2vw

                @media(max-width 767px)
                    line-height 18px
                    font-size 16px


        .app-banner
            padding 6.4% 3.28%
            line-height 31px
            font-size 25px
            color #000
            text-align center
            position absolute
            bottom -100%
            left 50%
            transform translateX(-50%)
            background-color #FBCE52
            transition bottom 500ms ease

            @media(max-width 1400px)
                padding 6.4vw 3.28vw
                line-height 2.25vw
                font-size 1.786vw

            @media(max-width 1023px)
                padding 6vw 3.28vw

            @media(max-width 767px)
                line-height 20px
                font-size 16px
                left 0
                transform translateX(0)

            span
                display block